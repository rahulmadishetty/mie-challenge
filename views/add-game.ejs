<%- include('partials/header.ejs') %>

<h1 style="text-align: center; margin-top: 2rem;">Add a New Board Game</h1>

<form action="/add-game" method="POST">
  <label for="name">Game Name:</label>
  <input type="text" id="name" name="name" required placeholder="Enter game name">

  <label for="description">Description:</label>
  <textarea id="description" name="description" rows="4" required placeholder="Enter game description"></textarea>

  <label for="category">Category:</label>
  <input type="text" id="category" name="category" required placeholder="Enter category (e.g., Strategy)">

  <label for="max_players">Max Players:</label>
  <input type="number" id="max_players" name="max_players" required placeholder="Enter max players">

  <label for="min_players">Min Players:</label>
  <input type="number" id="min_players" name="min_players" required placeholder="Enter min players">

  <label for="average_duration">Average Duration (mins):</label>
  <input type="number" id="average_duration" name="average_duration" required placeholder="Enter average duration">

  <button type="submit">Add Game</button>
</form>

