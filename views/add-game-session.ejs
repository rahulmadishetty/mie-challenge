<%- include ('partials/header.ejs') %>

<h1 style="text-align: center; margin-top: 2rem;">Add Game Session</h1>
<form action="/add-game-session" method="POST">
    <label for="game_id">Select Game:</label>
    <select id="game_id" name="game_id" required>
        <% games.forEach(game => { %>
            <option value="<%= game.id %>"><%= game.name %></option>
        <% }) %>
    </select>
    <label for="session_date">Session Date:</label>
    <input type="datetime-local" id="session_date" name="session_date" required>
    <label for="players_count">Players Count:</label>
    <input type="number" id="players_count" name="players_count" required>
    <label for="duration">Duration (mins):</label>
    <input type="number" id="duration" name="duration" required>
    <label for="location">Location:</label>
    <input type="text" id="location" name="location" required>
    <label for="notes">Notes:</label>
    <textarea name="notes"></textarea>
    <button type="submit">Add Session</button>
</form>

<%- include ('partials/footer.ejs') %>
